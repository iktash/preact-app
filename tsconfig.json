{
    "compilerOptions": {
        "baseUrl": "src",
        "target": "ES2015",
        "module": "ESNext",
        "outDir": "dist",
        "noImplicitAny": true,
        "jsx": "react",
        "jsxFactory": "h",
        "allowJs": true,
        "strict": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*.tsx", "src/**/*.ts"]
}
